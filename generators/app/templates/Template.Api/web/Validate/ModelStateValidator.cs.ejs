using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.ModelBinding;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices.ComTypes;
using System.Threading.Tasks;

namespace <%= name %>.Api.web.Validate
{
    public class ModelStateValidator
    {
        public static IActionResult ValidateModelState(ActionContext context)
        {
            (string fieldName, ModelStateEntry entry) = context.ModelState
                .First(x => x.Value.Errors.Count > 0);
            string errorSerialized = entry.Errors.First().ErrorMessage;

            Error error = Error.Deserialize(errorSerialized);
            var res = new ModelStateDictionary();
            res.AddModelError(fieldName, error.Message);
           // Envelope envelope = Envelope.Error(error, fieldName);
            var result = new BadRequestObjectResult(new ModelStateDictionary(res));

            return result;
        }
    }
}
