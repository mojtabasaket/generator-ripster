using Microsoft.Extensions.Configuration;
using Microsoft.Extensions.DependencyInjection;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using <%= name %>.Common.Config;

namespace <%= name %>.Api.Core.Infrastructure
{
    

    public static class <%= name %>SettingsConfiguration
    {
        public static IServiceCollection Add<%= name %>Module(this IServiceCollection @this, IConfiguration configuration)
        {
            
            @this.Configure<AppSettings>(configuration.GetSection("<%= name %>"));
            @this.AddScoped<AppSettings, AppSettings>();
            return @this;
        }
    }
}
